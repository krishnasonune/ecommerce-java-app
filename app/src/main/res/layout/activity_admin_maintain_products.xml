<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="15dp"
    tools:context=".Admin.AdminMaintainProductsActivity">


    <com.rey.material.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.rey.material.widget.ImageView
            android:id="@+id/maint_product_item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop" />



        <com.rey.material.widget.EditText
            android:id="@+id/maint_product_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maint_product_item_image"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:hint="Product Name"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:background="@drawable/input_design"
            android:textColor="@color/purple_700"
            android:textSize="18dp"
            android:textStyle="bold" />




        <com.rey.material.widget.EditText
            android:id="@+id/maint_product_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maint_product_item_name"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:hint="Product Price"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:background="@drawable/input_design"
            android:textColor="@color/purple_700"
            android:textSize="18dp"
            android:textStyle="bold" />


        <com.rey.material.widget.EditText
            android:id="@+id/maint_product_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maint_product_item_price"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:hint="Product description"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:background="@drawable/input_design"
            android:textAllCaps="false"
            android:textColor="@color/purple_700"
            android:textSize="18dp"
            android:textStyle="bold" />


        <com.rey.material.widget.Button
            android:id="@+id/maint_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maint_product_item_description"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button"
            android:hint="Apply Changes"
            android:padding="12dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />


        <com.rey.material.widget.Button
            android:id="@+id/delete_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maint_product_btn"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button"
            android:hint="Delete Product"
            android:padding="12dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />




    </com.rey.material.widget.RelativeLayout>


</androidx.cardview.widget.CardView>